rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.token.email)).data.role == 'OWNER';
    }
    
    // Helper function to check if user owns the resource
    function isOwner UserResource(userId) {
      return isAuthenticated() && request.auth.token.email == userId;
    }
    
    // Users Collection
    match /users/{userId} {
      // Anyone authenticated can read user profiles
      allow read: if isAuthenticated();
      
      // Users can only update their own profile (except role and permissions)
      allow update: if isOwnerUserResource(userId) && 
                      !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'permissions']);
      
      // Only owner can update any user
      allow update: if isOwner();
      
      // Users can create their own profile (during registration)
      allow create: if isAuthenticated() && 
                      request.auth.token.email == userId &&
                      request.resource.data.role == 'user';
      
      // Only owner can delete users
      allow delete: if isOwner();
    }
    
    // Follows Collection
    match /follows/{followId} {
      // Anyone authenticated can read follow relationships
      allow read: if isAuthenticated();
      
      // Users can create follows where they are the follower
      allow create: if isAuthenticated() && 
                      request.resource.data.followerId == request.auth.token.email &&
                      request.resource.data.followerId != request.resource.data.followingId;
      
      // Users can delete follows where they are the follower
      allow delete: if isAuthenticated() && 
                      resource.data.followerId == request.auth.token.email;
      
      // Owner can delete any follow relationship
      allow delete: if isOwner();
    }
    
    // Sessions Collection (for multi-device login tracking)
    match /sessions/{sessionId} {
      // Users can read their own sessions
      allow read: if isAuthenticated() && 
                    resource.data.userId == request.auth.token.email;
      
      // Users can create their own sessions
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.token.email;
      
      // Users can delete their own sessions
      allow delete: if isAuthenticated() && 
                      resource.data.userId == request.auth.token.email;
      
      // Owner can read and delete any session
      allow read, delete: if isOwner();
    }
    
    // Analytics Collection (admin only)
    match /analytics/{document} {
      // Only owner can read analytics
      allow read: if isOwner();
      
      // Only owner can write analytics
      allow write: if isOwner();
    }
    
    // Settings Collection (admin only)
    match /settings/{document} {
      // Anyone authenticated can read settings
      allow read: if isAuthenticated();
      
      // Only owner can update settings
      allow write: if isOwner();
    }
  }
}
